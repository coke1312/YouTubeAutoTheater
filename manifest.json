
{
  "manifest_version": 3,
  "name": "YouTubeTheater",
  "version": "1.0",
  "description": "YouTubeTheater is a browser extension that uses cookies to automatically enable YouTube's Theater Mode whenever you visit a video.",
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}

